{
  "manifest_version": 3,
  "name": "Clawser Browser Control",
  "version": "0.1.0",
  "description": "Gives the Clawser agent real browser control: tabs, screenshots, DOM, input, monitoring.",
  "minimum_chrome_version": "135",

  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "userScripts",
    "webRequest",
    "cookies",
    "storage"
  ],
  "optional_permissions": ["debugger"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://localhost/*", "*://127.0.0.1/*", "file:///*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": false,
    "paths": {
      "./packages-*.js": ["./packages-*.d.ts"]
    }
  },
  "include": ["**/*.d.ts"],
  "exclude": ["node_modules"]
}
